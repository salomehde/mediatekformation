{% extends "baseadmin.html.twig" %}

{% block body %}
<p class="text-end">
        <a href="{{ path('admin.categorie.ajout') }}" class="btn btn-primary">
            Ajouter une nouvelle catégorie
        </a>
    </p>
    <table class="table table-striped">
        <caption style="text-align: center">Les playlists</caption>
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    catégorie<br />
                </th>
                
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr class="align-middle">
                    <td>
                        <h5 class="text-info">
                            {{ categorie.name }}
                        </h5>
                    </td>
                    <td>
                        <a href="{{ path('admin.categorie.suppr', {id:categorie.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer {{categorie.name}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
